<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight=".1" android:background="#545E5A">
        <ImageButton
                android:src="@drawable/navdrawer"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/nav_button" android:background="#0000"
                android:layout_weight="0.2"/>
        <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:layout_weight="0.8"/>

    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="0.9" android:padding="5dp">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
        >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:translationY="20dp" android:padding="4sp">


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/currentRecipeImage"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            app:srcCompat="@mipmap/ic_launcher"/>

                    <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        <LinearLayout
                                android:layout_width="200sp"
                                android:layout_height="40sp"
                                android:orientation="horizontal">

                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent" android:id="@+id/currentStars"
                                    android:layout_weight="0">
                                <ImageView
                                        android:layout_width="40sp"
                                        android:layout_height="40sp"
                                        app:srcCompat="@drawable/fillstar"/>
                                <ImageView
                                        android:layout_width="40sp"
                                        android:layout_height="40sp"
                                        app:srcCompat="@drawable/fillstar"/>
                                <ImageView
                                        android:layout_width="40sp"
                                        android:layout_height="40sp"
                                        app:srcCompat="@drawable/fillstar"/>
                                <ImageView
                                        android:layout_width="40sp"
                                        android:layout_height="40sp"
                                        app:srcCompat="@drawable/fillstar"/>
                                <ImageView
                                        android:layout_width="40sp"
                                        android:layout_height="40sp"
                                        app:srcCompat="@drawable/fillstar"/>
                            </LinearLayout>
                            <Space
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content" android:layout_weight="1"
                                    android:id="@+id/currentstars_altspace"/>

                        </LinearLayout>

                        <TextView
                                android:id="@+id/forum_recipe_view_name"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal|center_vertical"
                                android:textSize="30sp"
                                android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                        android:id="@+id/forum_recipe_view_instructions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="25sp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" android:padding="4sp">

                    <EditText
                            android:id="@+id/recipeRatingInput"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:textSize="25sp"/>

                    <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="/ 5"
                            android:textSize="25sp"/>
                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            app:srcCompat="@drawable/hollowstar"/>

                    <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            app:srcCompat="@drawable/hollowstar"/>

                    <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            app:srcCompat="@drawable/hollowstar"/>

                    <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            app:srcCompat="@drawable/hollowstar"/>

                    <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            app:srcCompat="@drawable/hollowstar"/>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="300sp"
                        android:layout_height="match_parent" android:translationY="-60sp">

                    <LinearLayout
                            android:id="@+id/fullstars"
                            android:layout_width="0dp"
                            android:layout_height="60sp"
                            android:layout_alignParentBottom="true"
                            android:background="#0000"
                            android:orientation="horizontal"
                            android:layout_weight="0">

                        <ImageView
                                android:layout_width="60sp"
                                android:layout_height="60sp"
                                app:srcCompat="@drawable/fillstar"/>

                        <ImageView
                                android:layout_width="60sp"
                                android:layout_height="60sp"
                                app:srcCompat="@drawable/fillstar"/>


                        <ImageView
                                android:layout_width="60sp"
                                android:layout_height="60sp"
                                app:srcCompat="@drawable/fillstar"/>

                        <ImageView
                                android:layout_width="60sp"
                                android:layout_height="60sp"
                                app:srcCompat="@drawable/fillstar"/>

                        <ImageView
                                android:layout_width="60sp"
                                android:layout_height="60sp"
                                app:srcCompat="@drawable/fillstar"/>


                    </LinearLayout>
                    <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:layout_weight="1"
                            android:id="@+id/fullstars_altspace"/>
                </LinearLayout>

                <Button
                        android:text="Rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/recipeRatingButton"
                        android:background="#A9D08D" android:textColor="#ffffff" android:textStyle="bold"/>


            </LinearLayout>


        </ScrollView>
    </FrameLayout>


</LinearLayout>