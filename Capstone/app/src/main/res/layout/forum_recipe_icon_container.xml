<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="0.7">
        <ImageView
                android:layout_width="0dp"
                android:layout_height="58dp" app:srcCompat="@drawable/delete" android:id="@+id/forum_recipe_image"
                android:adjustViewBounds="true" android:layout_weight="0.3"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:layout_weight="0.7">
            <TextView
                    android:text="Time"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:id="@+id/textView18" android:gravity="center|top"
                    android:textStyle="bold" android:textSize="10sp" android:layout_weight="0.4"/>
            <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:id="@+id/recipe_icon_time" android:gravity="center"
                    android:textSize="14sp" android:layout_weight="0.4"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="20sp"
                    android:layout_alignParentBottom="true"
                    android:background="#0000" android:layout_width="100sp" android:layout_weight="0.3">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" android:id="@+id/fullstars" android:layout_weight="0">
                    <ImageView
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            app:srcCompat="@drawable/fillstar"/>
                    <ImageView
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            app:srcCompat="@drawable/fillstar"/>
                    <ImageView
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            app:srcCompat="@drawable/fillstar"/>
                    <ImageView
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            app:srcCompat="@drawable/fillstar"/>
                    <ImageView
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            app:srcCompat="@drawable/fillstar"/>
                </LinearLayout>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/altstars" android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:id="@+id/recipe_name_icon_container_label"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:textSize="14sp"
            android:textStyle="bold" android:gravity="center" android:layout_weight="0.3"/>

</LinearLayout>
