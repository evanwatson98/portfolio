<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:layout_weight=".1" android:background="#545E5A">
        <ImageButton
                android:src="@drawable/navdrawer"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/nav_button" android:background="#0000"
                android:layout_weight="0.2"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="0.8"/>

    </LinearLayout>

    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent" android:layout_weight="0.9" android:padding="5dp">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
        >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:translationY="20dp" android:padding="4sp">


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/currentRecipeImage"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            app:srcCompat="@mipmap/ic_launcher"/>

                    <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        <LinearLayout
                                android:id="@+id/currentStars"
                                android:layout_width="0dp"
                                android:layout_height="40sp"
                                android:orientation="horizontal">

                            <ImageView
                                    android:layout_width="40sp"
                                    android:layout_height="40sp"
                                    app:srcCompat="@drawable/fillstar"/>

                            <ImageView
                                    android:layout_width="40sp"
                                    android:layout_height="40sp"
                                    app:srcCompat="@drawable/fillstar"/>

                            <ImageView
                                    android:layout_width="40sp"
                                    android:layout_height="40sp"
                                    app:srcCompat="@drawable/fillstar"/>

                            <ImageView
                                    android:layout_width="40sp"
                                    android:layout_height="40sp"
                                    app:srcCompat="@drawable/fillstar"/>

                            <ImageView
                                    android:layout_width="40sp"
                                    android:layout_height="40sp"
                                    app:srcCompat="@drawable/fillstar"/>

                        </LinearLayout>

                        <TextView
                                android:id="@+id/forum_recipe_view_name"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal|center_vertical"
                                android:textSize="30sp"
                                android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                        android:id="@+id/forum_recipe_view_instructions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="25sp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" android:padding="4sp">

                    <EditText
                            android:id="@+id/recipeRatingInput"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:textSize="25sp"/>

                    <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="/ 5"
                            android:textSize="25sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            app:srcCompat="@drawable/hollowstar"/>

                    <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            app:srcCompat="@drawable/hollowstar"/>

                    <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            app:srcCompat="@drawable/hollowstar"/>

                    <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            app:srcCompat="@drawable/hollowstar"/>

                    <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            app:srcCompat="@drawable/hollowstar"/>

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/fullstars"
                        android:layout_width="0dp"
                        android:layout_height="60sp"
                        android:layout_alignParentBottom="true"
                        android:background="#0000"
                        android:orientation="horizontal"
                        android:translationY="-60sp">

                    <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            app:srcCompat="@drawable/fillstar"/>

                    <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            app:srcCompat="@drawable/fillstar"/>

                    <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            app:srcCompat="@drawable/fillstar"/>

                    <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            app:srcCompat="@drawable/fillstar"/>

                    <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            app:srcCompat="@drawable/fillstar"/>


                </LinearLayout>
                <Button
                        android:text="Rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/recipeRatingButton"
                        android:background="#A9D08D" android:textStyle="bold" android:textColor="#ffffff"/>


            </LinearLayout>


        </ScrollView>
    </FrameLayout>


</LinearLayout>