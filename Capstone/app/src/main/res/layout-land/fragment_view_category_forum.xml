<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:layout_weight=".1" android:background="#545E5A">
        <ImageButton
                android:src="@drawable/navdrawer"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/nav_button" android:background="#0000"
                android:layout_weight="0.2"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="0.8"/>

    </LinearLayout>
    <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_weight="0.9">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/recipe_icon_container_llayout">


        </LinearLayout>


    </HorizontalScrollView>


</LinearLayout>